    /////////////////////////// не руш, бу кусь
    function Toast (buttonId, innerClass, message){
        const toastTrigger = document.querySelector(buttonId)
        const toastDiv = document.querySelector('#liveToast')
        if (toastTrigger) {
            toastTrigger.addEventListener('click', function () {
            const toast = new bootstrap.Toast(toastDiv)
            $(innerClass).text(message);
            toast.show()
        })}
    }
